#include <iostream>
#include <vector>
using namespace std;

class PriorityQueue {
private:
    vector<int> heap;  // Max-Heap

    // Heapify-up after insertion
    void heapifyUp(int index) {
        while (index > 0) {
            int parent = (index - 1) / 2;
            if (heap[index] > heap[parent]) {
                swap(heap[index], heap[parent]);
                index = parent;
            } else {
                break;
            }
        }
    }

    // Heapify-down after extraction
    void heapifyDown(int index) {
        int n = heap.size();
        while (true) {
            int largest = index;
            int left = 2 * index + 1;
            int right = 2 * index + 2;

            if (left < n && heap[left] > heap[largest])
                largest = left;
            if (right < n && heap[right] > heap[largest])
                largest = right;

            if (largest != index) {
                swap(heap[index], heap[largest]);
                index = largest;
            } else {
                break;
            }
        }
    }

public:
    // Check if empty
    bool isEmpty() {
        return heap.empty();
    }

    // Insert element
    void push(int value) {
        heap.push_back(value);
        heapifyUp(heap.size() - 1);
    }

    // Remove and return max element
    int pop() {
        if (isEmpty()) {
            cout << "Priority Queue is empty!\n";
            return -1;
        }
        int maxVal = heap[0];
        heap[0] = heap.back();
        heap.pop_back();
        heapifyDown(0);
        return maxVal;
    }

    // Return max element without removing
    int top() {
        if (isEmpty()) {
            cout << "Priority Queue is empty!\n";
            return -1;
        }
        return heap[0];
    }

    // Print heap (for debugging)
    void printHeap() {
        for (int val : heap)
            cout << val << " ";
        cout << endl;
    }
};

// ----------------- Main -----------------
int main() {
    PriorityQueue pq;

    pq.push(20);
    pq.push(15);
    pq.push(30);
    pq.push(40);
    pq.push(10);

    cout << "Heap (internal array): ";
    pq.printHeap();

    cout << "Top element: " << pq.top() << endl;

    cout << "Extract elements in order:\n";
    while (!pq.isEmpty()) {
        cout << pq.pop() << " ";
    }
    cout << endl;

    return 0;
}
